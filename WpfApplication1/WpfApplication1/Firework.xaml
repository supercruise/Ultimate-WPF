<Window x:Class="WpfApplication1.Firework"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d" Width="500" Height="750"
        Title="Firework">

    <Canvas x:Name="container" MouseLeftButtonDown="container_MouseLeftButtonDown" RenderTransformOrigin=".5,.5">
        <Canvas.Background>
            <ImageBrush ImageSource="Images/Night.jpg" />
        </Canvas.Background>
    </Canvas>

</Window>
