<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="250">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="20" />
                <Setter Property="Width" Value="170" />
                <Setter Property="Height" Value="35" />
            </Style>
        </StackPanel.Resources>
        
        <Button Content="Animation" Click="Button_Click"/>
        <Button Content="Animation 2" Click="Button_Click_5"/>
        <Button Content="Basic Styling" Click="Button_Click_1" />
        <Button Content="Data Template" Click="Button_Click_2"/>
        <Button Content="Control Template" Click="Button_Click_3"/>
        <Button Content="Firework" Click="Button_Click_4"/>
    </StackPanel>

</Window>
